<div class="container w-50 mt-5">
  <form action="/restaurants" method="POST">
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">餐廳</span>
      </div>
      <input type="text" class="form-control" name="name" required>
    </div>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">類別</span>
      </div>
      <input type="text" class="form-control" name="category" placeholder="美式、義式餐廳..." required>
    </div>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">圖片</span>
      </div>
      <input type="url" class="form-control" name="image" id="url"
       placeholder="https://example.com"
       pattern="https://.*" size="30"
       required>
    </div>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">地址</span>
      </div>
      <input type="text" class="form-control" name="location" required>
    </div>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">電話</span>
      </div>
      <input type="tel" id="phone" class="form-control" name="phone" required>
    </div>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">評分</span>
      </div>
      <input type="number" class="form-control" min="1.0" max="5.0" step="0.1" name="rating" placeholder="1.0 ~ 5.0" required>
    </div>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">描述</span>
      </div>
      <input type="text" class="form-control" name="description" required>
    </div>

    <div class="d-flex flex-row-reverse">
      <button type="submit" class="btn btn-primary mt-3">新增</button>
    </div>
  </form>
</div>