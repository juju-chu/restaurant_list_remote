<form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
  <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">餐廳</span>
      </div>
      <input type="text" class="form-control" name="name" value="{{ restaurant.name }}" required>
    </div>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">類別</span>
      </div>
      <input type="text" class="form-control" name="category" value="{{ restaurant.category }}" placeholder="美式、義式餐廳..." required>
    </div>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">圖片</span>
      </div>
      <input type="url" class="form-control" name="image" id="url"
       placeholder="https://example.com"
       pattern="https://.*" size="30" value="{{ restaurant.image }}" required>
    </div>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">地址</span>
      </div>
      <input type="text" class="form-control" name="location" value="{{ restaurant.location }}" required>
    </div>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">電話</span>
      </div>
      <input type="tel" id="phone" class="form-control" pattern="[0-9]{2} [0-9]{4} [0-9]{4}" placeholder="01 2345 6789" name="phone" value="{{ restaurant.phone }}" required>
    </div>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">評分</span>
      </div>
      <input type="number" class="form-control" min="1.0" max="5.0" step="0.1" name="rating" placeholder="1.0 ~ 5.0" value="{{ restaurant.rating }}" required>
    </div>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">描述</span>
      </div>
      <input type="text" class="form-control" name="description" value="{{ restaurant.description }}" required>
    </div>

    <div class="d-flex flex-row-reverse">
      <button type="submit" class="btn btn-primary mt-3">儲存</button>
    </div>

    <a href="/">返回</a>
</form>